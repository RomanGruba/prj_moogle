{{#each this}}

{{#if title}}
<li class="films-item" data-id={{id}} data-mediatype="movie">
  {{else}}
<li class="films-item" data-id={{id}} data-mediatype="TV">
  {{/if}}
  <button class="button_icon button_icon-star">
    <svg data-id={{id}} class="icon icon-star">
      <use href="../img/icons/sprite.svg#star"></use>
    </svg>
  </button>
  <button class="button_icon button_icon-bell">
    <svg class="icon icon-bell">
      <use href="../img/icons/sprite.svg#bell"></use>
    </svg>
  </button>
  <a href="/about.html">
    <div class="img-container">
      <img class="img-sample" src="https://image.tmdb.org/t/p/original/{{backdrop_path}}" alt="movie" />
      <div data-id={{id}} class="gradient">
        <p class="imbd"> Imdb {{vote_average }}</p>
      </div>
    </div>
    {{#if title}}
    <p id="film_name" class="films-name">{{title}} <span id="film_date">({{release_date}})</span></p>
    {{else}}
    <p id="film_name" class="films-name">{{original_name}} <span id="film_date">({{first_air_date}})</span> </p>
    {{/if}}
  </a>
</li>
{{/each}}